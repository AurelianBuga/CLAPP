<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aurelian.cleanerapp.MainScreen">

    <android.support.constraint.ConstraintLayout
        android:layout_height="250dp"
        android:layout_width="0dp"
        android:background="@color/colorPrimary"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="0dp">


        <ImageView
            android:id="@+id/StorageArc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintHorizontal_chainStyle="CHAIN_SPREAD"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:text="@string/test_value_arc"
            android:layout_height="43dp"
            android:layout_width="52dp"
            android:layout_marginStart="30dp"
            android:textSize="32sp"
            android:textColor="@color/color_description_arc"
            android:id="@+id/percenteStorageArc"
            app:layout_constraintTop_toTopOf="@+id/StorageArc"
            app:layout_constraintBottom_toBottomOf="@+id/StorageArc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/StorageArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/StorageArc"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.26">
        </TextView>

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="%"
            android:layout_marginStart="70dp"
            android:textSize="20sp"
            android:textColor="@color/color_description_arc"
            app:layout_constraintTop_toTopOf="@+id/StorageArc"
            app:layout_constraintBottom_toBottomOf="@+id/StorageArc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/StorageArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/StorageArc"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.32999998"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="67dp"
            android:layout_height="23dp"
            android:text="@string/test_storage_report"
            android:layout_marginStart="20dp"
            android:textColor="@color/color_description_arc"
            android:textSize="11sp"
            android:id="@+id/storageReport"
            app:layout_constraintTop_toTopOf="@+id/StorageArc"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/StorageArc"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/StorageArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/StorageArc"
            app:layout_constraintVertical_bias="0.65999997"
            app:layout_constraintHorizontal_bias="0.27" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="64dp"
            android:layout_marginStart="-130dp"
            android:textSize="50sp"
            android:text="@string/test_value_arc"
            android:textColor="@color/color_description_arc"
            android:id="@+id/percenteMemoryArc"
            app:layout_constraintTop_toTopOf="@+id/MemoryArc"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/MemoryArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/MemoryArc"
            app:layout_constraintBottom_toBottomOf="@+id/MemoryArc"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.377" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:text="%"
            android:textColor="@color/color_description_arc"
            app:layout_constraintTop_toTopOf="@+id/MemoryArc"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/MemoryArc"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/MemoryArc"
            app:layout_constraintBottom_toBottomOf="@+id/MemoryArc"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.451"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1.20/1.92GB"
            android:textColor="@color/color_description_arc"
            android:layout_marginStart="-90dp"
            android:id="@+id/memoryReport"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/MemoryArc"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/MemoryArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/MemoryArc"
            app:layout_constraintBottom_toBottomOf="@+id/MemoryArc"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.68" />



        <ImageView
            android:id="@+id/CpuTempArc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="170dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="46dp"
            android:layout_height="50dp"
            android:layout_marginStart="-82dp"
            android:textColor="@color/color_description_arc"
            android:text="@string/test_value_arc"
            android:textSize="32sp"
            android:id="@+id/cpuTempArc"
            app:layout_constraintTop_toTopOf="@+id/CpuTempArc"
            app:layout_constraintBottom_toBottomOf="@+id/CpuTempArc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/CpuTempArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/CpuTempArc" />

        <TextView
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:text="o"
            android:textSize="15sp"
            android:textColor="@color/color_description_arc"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@+id/CpuTempArc"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/CpuTempArc"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/CpuTempArc"
            app:layout_constraintBottom_toBottomOf="@+id/CpuTempArc"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.26999998"
            app:layout_constraintHorizontal_bias="0.68" />

        <TextView
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:text="GOOD"
            android:layout_marginStart="-57dp"
            android:textColor="@color/color_description_arc"
            android:textSize="13sp"
            android:id="@+id/cpuTempStatus"
            app:layout_constraintTop_toTopOf="@+id/CpuTempArc"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/CpuTempArc"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/CpuTempArc"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/CpuTempArc"
            app:layout_constraintVertical_bias="0.73"
            app:layout_constraintHorizontal_bias="0.58" />

        <ImageView
            android:id="@+id/MemoryArc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="w,1:1" />

        <TextView
            android:text="Storage"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:id="@+id/storage"
            android:layout_marginStart="-355dp"
            android:textSize="20sp"
            android:textColor="@color/color_description_arc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/StorageArc"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/storageReport"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/storageReport" />

        <TextView
            android:text="Memory"
            android:layout_width="102dp"
            android:layout_height="39dp"
            android:id="@+id/memory"
            android:textSize="25sp"
            android:textColor="@color/color_description_arc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="27dp"
            app:layout_constraintTop_toTopOf="@+id/storage"
            android:layout_marginTop="0dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/memoryReport"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/memoryReport"
            app:layout_constraintHorizontal_bias="0.13" />

        <TextView
            android:text="CPU"
            android:layout_width="53dp"
            android:layout_height="31dp"
            android:id="@+id/cpuTemp"
            android:layout_marginStart="50dp"
            android:textSize="20sp"
            android:textColor="@color/color_description_arc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CpuTempArc"
            app:layout_constraintVertical_bias="0.151"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/cpuTempStatus"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/cpuTempStatus"
            app:layout_constraintHorizontal_bias="1.0" />





    </android.support.constraint.ConstraintLayout>


    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:background="@color/color_bottom_navigation_background"
        app:itemTextColor="@color/color_bottom_navigation_text"
        app:menu="@layout/menu_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
